<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4699FF"
    tools:context=".view.BusDriver">


    <ListView
        android:id="@+id/listView"
        android:layout_width="761dp"
        android:layout_height="482dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/custom_list_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ride_test2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/ride_test2"
        android:layout_width="329dp"
        android:layout_height="721dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/custom_textview"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ride_test"
        android:layout_width="280dp"
        android:layout_height="325dp"
        android:background="@drawable/custom_textview"
        android:fontFamily="@font/nanum_square_eb"
        android:gravity="center"
        android:text="승차"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ride_test2"
        app:layout_constraintEnd_toEndOf="@+id/ride_test2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/ride_test2"
        app:layout_constraintTop_toTopOf="@+id/ride_test2"
        app:layout_constraintVertical_bias="0.936" />

    <TextView
        android:id="@+id/drop_test"
        android:layout_width="280dp"
        android:layout_height="325dp"
        android:background="@drawable/custom_textview"
        android:fontFamily="@font/nanum_square_eb"
        android:text="하차"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ride_test"
        app:layout_constraintEnd_toEndOf="@+id/ride_test2"
        app:layout_constraintStart_toStartOf="@+id/ride_test2"
        app:layout_constraintTop_toTopOf="@+id/ride_test2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="287dp"
        android:layout_height="195dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toStartOf="@+id/drive_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tayo_logo1" />

    <Button
        android:id="@+id/drive_end"
        android:layout_width="325dp"
        android:layout_height="64dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/press_button1"
        android:fontFamily="@font/nanum_square_eb"
        android:text="운행종료"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toStartOf="@+id/ride_test2"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/drive_start" />

    <Button
        android:id="@+id/drive_start"
        android:layout_width="325dp"
        android:layout_height="64dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/press_button1"
        android:fontFamily="@font/nanum_square_eb"
        android:text="운행시작"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/drive_end"
        app:layout_constraintEnd_toStartOf="@+id/ride_test2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        tools:layout_editor_absoluteX="535dp"
        tools:layout_editor_absoluteY="29dp" />


</android.support.constraint.ConstraintLayout>