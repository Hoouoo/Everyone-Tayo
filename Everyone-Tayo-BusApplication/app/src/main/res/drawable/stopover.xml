<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#24538C">
    <item>
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:top="5dp" android:left="5dp">
                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="#1f000000" />
                </shape>
            </item>

            <item android:id="@android:id/mask" android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#24538C" />
                </shape>
            </item>

            <!--background (위로)-->
            <item android:id="@android:id/background" android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="8dp" />
                    <stroke android:width="3dp" android:color="#24538C" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>