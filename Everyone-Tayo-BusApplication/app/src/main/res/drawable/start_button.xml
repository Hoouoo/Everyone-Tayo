<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#0F6DD1">
    <item>
        <layer-list>
<!--             shadow (밑으로) : 그림자 -->
                        <item android:top="5dp" android:left="5dp">
                            <shape>
                                <corners android:radius="8dp" />
                                <solid android:color="#1f000000" />
                            </shape>
                        </item>

            <item android:id="@android:id/mask" android:bottom="5dp" android:right="5dp">
                <shape >
                    <solid android:color="#0F6DD1" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:id="@android:id/background" android:bottom="5dp" android:right="5dp">
                <shape >
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>