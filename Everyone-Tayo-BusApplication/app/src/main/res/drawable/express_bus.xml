<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FA5154">
    <!-- shadow (밑으로) : 그림자 -->
    <item android:top="4dp" android:left="4dp">
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="#1f000000" />
        </shape>
    </item>
    <item android:id="@android:id/mask" android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FA5154" />
        </shape>
    </item>
    <item android:id="@android:id/background" android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</ripple>