<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#0F6DD1">

    <!-- shadow (밑으로) : 그림자 -->
    <item android:top="4dp" android:left="4dp">
         <shape>
              <corners android:radius="5dp" />
              <solid android:color="#1f000000" />
         </shape>
    </item>
    <item android:id="@android:id/mask" android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#D10F15" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:id="@android:id/background" android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</ripple>