<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4699FF"

    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="270dp"
        android:layout_height="205dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/start_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/tayo_logo1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/nanum_square_r"
        android:text="이동에 차이가\n사라지다."
        android:textColor="#FFFCFC"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/nanum_square_round_r"
        android:text="ⓒ 2021. (TEAM)EveryTayo  all rights reserved."
        android:textColor="#FDFDFD"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_button" />


    <Button
        android:id="@+id/start_button"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/start_button"
        android:fontFamily="@font/nanum_square_round_eb"
        android:text="시작하기"
        android:textColor="#005490"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/busdriver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/nanum_square_r"
        android:text="시각장애인을 위한 버스 승하차 앱"
        android:textColor="#0406A5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />


</android.support.constraint.ConstraintLayout>